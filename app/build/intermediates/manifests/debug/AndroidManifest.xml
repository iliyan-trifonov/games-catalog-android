<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.like2program.ps3igri"
    android:installLocation="auto"
    android:versionCode="16"
    android:versionName="1.16" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ps3icon"
        android:label="PS3 игри" >
        <activity
            android:name="com.like2program.ps3igri.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.like2program.ps3igri.GameDetails"
            android:configChanges="orientation|keyboardHidden"
            android:label="Детайли :: @string/app_name_suffix" >
            <intent-filter>
                <action android:name="details" />

                <category android:name="details" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.like2program.ps3igri.GamesSearch"
            android:configChanges="orientation|keyboardHidden"
            android:label="Търсене :: @string/app_name_suffix" >
            <intent-filter>
                <action android:name="gamessearch" />

                <category android:name="gamessearch" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.like2program.ps3igri.GamesFavoritesActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Любими :: @string/app_name_suffix" >
            <intent-filter>
                <action android:name="gamesfavoritesactivity" />

                <category android:name="gamesfavoritesactivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.like2program.ps3igri.GameImagePreview"
            android:configChanges="orientation|keyboardHidden"
            android:label="Картинка :: @string/app_name_suffix" >
            <intent-filter>
                <action android:name="gameimagepreview" />

                <category android:name="gameimagepreview" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.like2program.ps3igri.AuthorGames"
            android:configChanges="orientation|keyboardHidden"
            android:label="Всички обяви на автор :: @string/app_name_suffix" >
            <intent-filter>
                <action android:name="authorgames" />

                <category android:name="authorgames" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.like2program.ps3igri.Preferences"
            android:label="Настройки :: @string/app_name_suffix" >
            <intent-filter>
                <action android:name="preferences" />

                <category android:name="preferences" />
            </intent-filter>
        </activity>
    </application>

</manifest>